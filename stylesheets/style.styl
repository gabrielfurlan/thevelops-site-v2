// Header 
.header
	width 100%
	height 170px
	max-width $screen-device-large
	margin-left auto
	margin-right auto
	display flex
	justify-content space-between
	align-items center

	> .brand
		height 62px
		user-select none
		
		> img 
			height 100%

	> .navigation
		display inline-block

		> .link
			text-transform uppercase
			text-decoration none
			color $gray
			font-size .9em
			font-weight 600
			user-select none

			& + .link 
				margin-left 15px

			&.-coming-soon
				font-weight 300 
				font-style italic
				cursor not-allowed

// Main
.main
	width 100%
	max-width $screen-device-large
	margin-left auto
	margin-right auto

	//Apresentation
	> .apresentation
		height calc(100vh - 170px)
		display flex
		flex-direction column
		justify-content center
		> .title
			font-size 3.25em
			font-weight 300
			line-height 1.2em

			> strong 
				font-weight 600
		
		> .description
			max-width 680px
			font-size 1.5em
			font-weight 300
			line-height 1.4em
			margin-top 50px
			margin-bottom 50px

		> .more
			background linear-gradient(to right, $blue , $purple);
			height 55px
			width 180px
			color white
			font-size 1.5em
			font-weight 400
			cursor pointer

			&:hover
				background linear-gradient(to right, $blue-hover , $purple-hover);


	//About
	.about
		> .title
			width 100%
			font-size 1.8em
			font-weight 600
			text-align center
			margin-bottom 50px

			> img 
				vertical-align middle
				height 36px
				margin-right 10px

		> .text
			font-size 1.2em
			line-height 1.4em
			font-weight 300
			> p 
				text-align justify

			> p + p
				margin-top 40px

	// Co-workers
	.co-workers
		margin-top 200px
		> .title
			width 100%
			font-size 1.8em
			font-weight 600
			text-align center
			margin-bottom 50px

			> img 
				vertical-align middle
				height 36px
				margin-right 10px

			


		

				
		